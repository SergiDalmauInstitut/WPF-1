<Window x:Class="ex_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ex_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="525">
    <StackPanel>
        <Label Content="Nom"></Label>
        <TextBox Width="520" Height="30" Text="{Binding Path=Nom, Mode=TwoWay}"></TextBox>
        <Label Content="Cognom"></Label>
        <TextBox Width="520" Height="30" Text="{Binding Path=Cognom, Mode=TwoWay}"></TextBox>
        <Label Content="Nom complet"></Label>
        <TextBox Width="520" Height="30" Text="{Binding Path=NomComplet, Mode=TwoWay}"></TextBox>
    </StackPanel>
</Window>
